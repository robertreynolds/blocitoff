<h1>Lists</h1>

<div class="row">
  <div class="span8">
    <% @lists.each do |list| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to list.name, list %>
          </h4>
          <small>
            <%= list.description %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span4">
    <% if can? :create, List %>
      <%= link_to "New List", new_list_path, class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>